<% layout("/layouts/boilerplate") %>
<body>
    <h2>Edit your Existing Property</h2>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">

        <input name="listing[title]" value="<%= listing.title %>" type="text"> <br><br>
        <textarea name="listing[description]" rows="10" cols="50"><%= listing.description %></textarea> <br><br>
        <input name= "listing[image.url]" value="<%= listing.image %>" type="text"> <br><br>
        <input name= "listing[price]" value="<%= listing.price %>" type="number"> <br><br>
        <input name="listing[location]" value="<%= listing.location %>" type="text"> <br><br>
        <input name="listing[country]" value="<%= listing.country %>" type="text"> <br><br>

        <button>Edit</button>
    </form>
</body>
