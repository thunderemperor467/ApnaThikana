<% layout("/layouts/boilerplate") %>
<div class="bg-image">
    <div class="row">
        <div class="col-8 offset-2">
            <br><br>
            <h2>Edit your Listing</h2>
            <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">

                <div class="mb-3">
                    <label name="title" class="form-label">Title</label> <br>
                    <input name="listing[title]" value="<%= listing.title%>" type="text" class="form-control" required>
                    <div class="invalid-feedback">Please enter a title</div>
                </div>

                <div class="mb-3"> 
                    <label name="description" class="form-label">Description</label> <br>
                    <textarea name="listing[description]" class="form-control" required><%= listing.description%></textarea>
                    <div class="invalid-feedback">Description shouldn't be empty</div>
                </div>

                <div class="mb-3">
                    <label name="image" class="form-label">Image URL</label> <br>
                    <input name= "listing[image.url]" value=" <%=listing.image.url%> " type="text" class="form-control">
                </div>
                <div class="mb-3">
                    <label name="image" class="form-label">Upload new Image</label> <br>
                    <input name= "listing[image]" type="file" class="form-control">
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label name="price" class="form-label">Pricing</label><br>
                        <input name= "listing[price]" value="<%=listing.price%>" type="number" class="form-control" required> 
                        <div class="invalid-feedback">Price shouldn't be empty</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label name="country" class="form-label">Country</label><br>
                        <input name="listing[country]" value="<%=listing.country%>" type="text" class="form-control" required>
                        <div class="invalid-feedback">Please enter a valid country</div>
                    </div>
                </div> 

                <div class="mb-3">
                    <label name="location" class="form-label">Location</label> <br>
                    <input name="listing[location]" value="<%=listing.location%>" type="text" class="form-control" required>
                    <div class="invalid-feedback">Please enter a valid location</div>
                </div>   

                <button class="btn btn-dark add-btn">Edit</button>
                <br><br><br><br>
            </form>
        </div>
    </div>
</div>
<script src="/js/script.js"></script>