<!-- for ERROR -->
<% if(error && error.length>0){ %>
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    <%= error %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" cols-6 offset-3></button>
</div>
<% } %>